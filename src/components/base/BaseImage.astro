---
type Props = {
	imgName: string
	altText?: string
	describedBy?: string
}

const imageFilePath = `https://fscjcel.blob.core.windows.net/ilp-assets/${Astro.url.pathname
	.split('/')
	.at(3)}`

const { imgName, altText = '', describedBy } = Astro.props
// TODO: build in srcset of a <picture> to account for 1x and 2x pixel density. creating two images, but designers only need to put in the one name for it to work for both, assuming they use the correct naming convention.
---

<img
	aria-describedby={describedBy}
	src=`${imageFilePath}:${imgName}`
	alt={altText}
/>
