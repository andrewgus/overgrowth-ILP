---
type Props = {
	src: string
	title: string
}
const { src, title } = Astro.props
---

<a class='extLink' href={src} target='_blank' rel='noreferrer'
	>{title}<img src='../catalog/extLink.svg' alt='' aria-hidden='true' /><span
		class='visuallyHidden'>opens in a new window</span
	></a
>

<style lang='scss'>
	.extLink > img {
		margin-left: var(--s-10);
		height: var(--s-2);
		width: var(--s-2);
	}
</style>
