---
type Props = {
	title: string
}
const { title } = Astro.props
---

<script>
	const summaryBtns = document.querySelectorAll('.accordion > summary')
	Array.from(summaryBtns).forEach((btn) => {
		btn.addEventListener('click', () => {
			btn.setAttribute(
				'aria-exanded',
				btn.closest('.accordion')?.getAttribute('open') === null
					? 'true'
					: 'false'
			)
		})
	})
</script>

<details class='accordion'>
	<summary aria-expanded='false' tabindex='0' role='button'>{title}</summary>
	<slot />
</details>

