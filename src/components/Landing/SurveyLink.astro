---
import ExternalLink from '../a11yElements/ExternalLink.astro'
---

<script>
	const surveyEl = document.getElementById('survey-link') as HTMLElement
	// Setting the dates when the survey is visible
	const currentDate = new Date()
	const surveyStartDate = new Date(2023, 10, 13) // Nov. 13
	const surveyEndDate = new Date(2023, 10, 20) // Nov. 20
	const isWithinSurveyDateRange =
		currentDate >= surveyStartDate && currentDate <= surveyEndDate

	if (isWithinSurveyDateRange) surveyEl.style.display = 'block'
</script>

<div id='survey-link'>
