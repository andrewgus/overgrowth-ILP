---
import BaseButton from '../base/BaseButton.vue'
---

<div
	class='skipBtn'
	id='skipToContent'>
	<BaseButton
		isLink
		isWarning
		isDisabled={false}
		text='Skip to main content'
		url='#titleHeading'
	/>
</div>

<style lang='scss'>
	.skipBtn {
		position: absolute;
		top: -20vh;
		max-width: max-content;
		border: 1px solid var(--white);
		transition: top var(--timeShort) ease-in-out;
		z-index: 999;

		&:focus-within {
			top: 0;
		}
		> a {
			border-radius: 0 0 var(--s0) var(--s0);
			display: block;
			padding: var(--s-5);
			color: var(--white);
		}
	}
</style>
