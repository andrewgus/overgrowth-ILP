---
type Props = {
	name: string
	setDirection: 'col' | 'row'
	spanColumnsNum?: number
	spanRowsNum?: number
}
const { name, setDirection, spanColumnsNum, spanRowsNum } = Astro.props
---

{
	() => {
		const getColSpan = !!spanColumnsNum ? { colspan: spanColumnsNum } : {}

		const getRowSpan = !!spanRowsNum ? { rowspan: spanRowsNum } : {}

		return (
			<th
				scope={setDirection}
				{...getColSpan}
				{...getRowSpan}>
				{name}
			</th>
		)
	}
}
