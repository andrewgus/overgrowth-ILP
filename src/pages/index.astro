---
import TheCatalog from '../layouts/TheCatalog.astro'
import useFormatTitle from '../composables/useFormatTitle'

const allLessons = await Astro.glob('./*/*.astro')

const topicURLs = [
	...new Set(
		allLessons
			.map((lesson) => lesson.url!.split('/').at(2))
			.filter((topic) => topic !== 'test-pages')
	),
]

const topicTitles = topicURLs.map((title) => useFormatTitle(title!))
---

<TheCatalog title='FSCJâ€™s Interactive Lessons Catalog'>
	<p>Select a topic to view available lessons&hellip;</p>
	<ul class='cardGrid'>
		{
			topicTitles.map((title, i) => (
				<li>
					<a class='linkCard' href={`/catalog/${topicURLs[i]}`}>
						<span>{title}</span>
					</a>
				</li>
			))
		}
	</ul>
</TheCatalog>
