---
import LibLayout from '../layouts/LibLayout.astro'

const allLessons = await Astro.glob('../pages/*/*.astro')

const topicURL = allLessons.map((lesson) => lesson.url!.split('/').at(1))

const topicNamesMap: Map<string, string> = new Map([['sci', 'Science']])

const topicTitles = topicURL.map((t) => topicNamesMap.get(t!))
---

<LibLayout title='All Topics'>
	<!-- TODO: Create a card link component for accessing different topics -->
	<div>
		<a href={`${topicURL}`}>{topicTitles}</a>
	</div>
</LibLayout>
