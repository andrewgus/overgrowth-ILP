---
type Props = {
	title: string
	isReferences?: boolean
}

const { title, isReferences } = Astro.props
---

<article
	class:list={['section', 'staticContent', { references: isReferences }]}
	tabindex='-1'>
	<h2>{title}</h2>
	<slot />
</article>

<style lang='scss'>
	.references {
		> :global(*) {
			max-width: 60ch;
		}
		> :global(p) {
			overflow-wrap: normal;
			hyphens: auto;
			text-indent: min(-1 * var(--s2), -1ch);
			margin-inline-start: var(--s2);
		}
	}
</style>
