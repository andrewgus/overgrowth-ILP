---
export interface Props {
	heading: string
	columnSet?: '6040' | '4060' | '50' | '7525' | '2575' | '30' | '25'
}

const { heading, columnSet } = Astro.props
---

<section>
	<h2>{heading}</h2>
	<div class={columnSet ? columnSet : ''}>
		<slot />
	</div>
</section>

<style>
	section {
		min-height: 90vh;
		padding: 0 var(--s-3);
		display: flex;
		flex-flow: column;
		align-items: center;
		background-color: var(--white);
	}
	section + section {
		border-top: 2px solid var(--darkGray);
		background-color: var(--offWhite);
	}
	section > div {
		margin: 0 auto;
		max-width: 72ch;
	}
</style>
