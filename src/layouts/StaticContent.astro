---
export interface Props {
	heading: string
}

const { heading } = Astro.props
---

<section>
	<h2>{heading}</h2>
	<div>
		<slot />
	</div>
</section>
<style>
	section {
		min-height: 90vh;
		padding: 0 var(--s-3);
		display: flex;
		flex-flow: column;
		align-items: center;
	}
	section + section {
		border-top: 1px solid var(--darkGray);
	}
	section > div {
		margin: 0 auto;
	}
</style>
