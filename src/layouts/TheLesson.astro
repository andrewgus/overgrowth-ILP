---
import TheLocalStorageDialog from '../components/modals/TheLocalStorageDialog.vue'
import SkipToContent from '../components/navigation/SkipToContent.astro'
import TheLanding from '../components/landing/TheLanding.astro'
import TheLessonNav from '../components/navigation/TheLessonNav.vue'
import ActivitiesOffFooter from '../components/footer/ActivitiesOffFooter.vue'
import AriaLiveAnnouncements from '../components/a11yElements/AriaLiveAnnouncements.vue'
import createID from '../composables/useCreateID'
import '../styles/root.scss'
import '../styles/specifiedLayouts/articleLayout.scss'

type Props = {
	title: string
	scene: string
	gradientColor: string
	language?: string
	isInteractive?: boolean
}

const {
	title,
	scene,
	gradientColor,
	language = 'en',
	isInteractive = true,
} = Astro.props
---

<!DOCTYPE html>
<html lang={language}>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1, user-scalable=YES'
		/>
		<link
			rel='icon'
			href='/favicon.png'
			sizes='any'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<script>
			import '../scripts/setSectionsHandler.js'
			import '../scripts/hashChangeHandler.js'
		</script>
		<title>{`${title} ${isInteractive ? 'Interactive' : ''} Lesson`}</title>
	</head>
	<body id={`${createID(title)}-lesson`}>
		{isInteractive && <AriaLiveAnnouncements client:load />}
		{isInteractive && <TheLocalStorageDialog client:load />}
		<SkipToContent />
		<TheLessonNav client:load />
		<main id='theLessonContent'>
			<TheLanding
				scene={scene}
				title={title}
				color={gradientColor}
			/>
			<slot />
		</main>
		{isInteractive && <ActivitiesOffFooter client:load />}
	</body>
</html>
