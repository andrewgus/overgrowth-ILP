---
import '../styles/root.scss'
import TheLanding from '../layouts/TheLanding.vue'
import TheLessonNav from '../components/navigation/TheLessonNav.vue'
export interface Props {
	title: string
	scene: string
	gradientColor?: string
	isReflectionOn?: boolean
	isPracticeOn?: boolean
	isChoiceOn?: boolean
}

const {
	title,
	scene,
	gradientColor,
	isReflectionOn,
	isPracticeOn,
	isChoiceOn,
} = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<script>
			import '../scripts/hashChangeHandler.js'
		</script>
		<title>{title}</title>
	</head>
	<body>
		<main>
			<article>
				<TheLanding
					client:load
					title={title}
					scene={scene}
					color={gradientColor}
					isReflectionOn={isReflectionOn}
					isPracticeOn={isPracticeOn}
					isChoiceOn={isChoiceOn}
				/>
				<TheLessonNav client:only='vue' />
				<slot />
			</article>
		</main>
	</body>
</html>
